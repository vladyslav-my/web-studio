<li class="portfolio-card">
   <div class="portfolio-card__flexability-image">
      <div class="portfolio-card__desc-wrapper">
         <p class="portfolio-card__desc">{{ card.desc }}</p>
      </div>
      <img class="portfolio-card__image" src="{{ card.src }}" alt="{{ card.alt }}" />
   </div>
   <div class="portfolio-card__info-wrapper">
      <h3 class="portfolio-card__title">{{ card.title }}</h3>
      <p class="portfolio-card__text">{{ card.text }}</p>
   </div>
</li>
